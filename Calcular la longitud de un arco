#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double radio, angulo;
    cout << "Ingrese el radio: ";
    cin >> radio;
    cout << "Ingrese el Ã¡ngulo en grados: ";
    cin >> angulo;

    double arco = (angulo * M_PI * radio) / 180;
    cout << "Longitud del arco: " << arco << endl;
    return 0;
}
