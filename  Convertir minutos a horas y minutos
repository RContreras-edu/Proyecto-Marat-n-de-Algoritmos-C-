#include <iostream>
using namespace std;

int main() {
    int minutos, horas, resto;
    cout << "Ingrese los minutos: ";
    cin >> minutos;

    horas = minutos / 60;
    resto = minutos % 60;

    cout << minutos << " minutos equivalen a "
         << horas << " horas y " << resto << " minutos." << endl;
    return 0;
}
